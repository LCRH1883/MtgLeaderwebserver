#!/usr/bin/env bash
set -euo pipefail

ROOT_DIR="$(cd -- "$(dirname -- "${BASH_SOURCE[0]}")/.." && pwd)"

cache_base="${ROOT_DIR}/.tooling/cache"
export GOCACHE="${cache_base}/go-build"
export GOMODCACHE="${cache_base}/gomodcache"

mkdir -p "${GOCACHE}" "${GOMODCACHE}"

exec "${ROOT_DIR}/.tooling/go/bin/go" "$@"
